  <!-- Scripts -->
  <script>
  document.addEventListener("DOMContentLoaded", function(){
    const nome = localStorage.getItem('lead_nome') || '';
    const dietTitle = localStorage.getItem('diet_title') || localStorage.getItem('quiz_result_title') || '';
    const bodyType = localStorage.getItem('body_type') || localStorage.getItem('quiz_body_type') || '';
    const imcValue = localStorage.getItem('imc_value') || '';
    const imcLabel = localStorage.getItem('imc_label') || '';
    const desc = localStorage.getItem('quiz_result_desc') || '';
    const phone = localStorage.getItem('lead_whats') || '';

    if(nome) document.getElementById('nomeSpan').textContent = nome + "!";
    document.getElementById('year').textContent = new Date().getFullYear();
    document.getElementById('infoNome').textContent = nome || '-';
    document.getElementById('infoDieta').textContent = dietTitle || 'Personalizada';
    document.getElementById('infoBodyType').textContent = bodyType || '---';
    document.getElementById('infoIMC').textContent = imcValue || '---';
    document.getElementById('infoIMCLabel').textContent = imcLabel ? "(" + imcLabel + ")" : '';
    document.getElementById('descSpan').textContent = desc;

    // Mensagem de envio autom√°tico WhatsApp
    const statusDiv = document.getElementById('statusEnvio');
    let count = 5;
    statusDiv.textContent = "‚è≥ Enviando plano para seu WhatsApp...";
    const timer = setInterval(() => {
      statusDiv.textContent = `‚è≥ Enviando plano para seu WhatsApp... ${count}`;
      count--;
      if (count < 0) {
        clearInterval(timer);
        statusDiv.textContent = `‚úÖ Enviado com sucesso para seu WhatsApp: ${phone ? phone.replace(/^55/, '').replace(/(\d{2})(\d{5})(\d{4})/, "($1) $2-$3") : 'n√∫mero n√£o encontrado'}`;
        statusDiv.style.animation = "none";
        statusDiv.style.background = "#d1fae5";
        statusDiv.style.color = "#065f46";
      }
    }, 1000);
  });

  // === Simula envio por e-mail ===
  document.addEventListener("DOMContentLoaded", () => {
    const btnEmail = document.getElementById("btnEmail");
    const emailInput = document.getElementById("emailInput");
    const emailStatus = document.getElementById("emailStatus");

    btnEmail.addEventListener("click", async () => {
      const email = emailInput.value.trim();
      if (!email || !email.includes("@")) {
        emailStatus.textContent = "‚ö†Ô∏è Digite um e-mail v√°lido.";
        emailStatus.style.color = "red";
        return;
      }

      emailStatus.textContent = "‚è≥ Enviando plano para " + email + "...";
      emailStatus.style.color = "#047857";

      // Aqui entrar√° sua futura integra√ß√£o de envio real
      await new Promise(r => setTimeout(r, 2000));

      emailStatus.textContent = "‚úÖ Plano enviado com sucesso para " + email;
      emailStatus.style.color = "#047857";
    });
  });
  </script>



  <a id="btnEmail" href="#" class="block text-center rounded-xl px-5 py-3 bg-[var(--brand)] text-white font-semibold hover:bg-emerald-600 transition">
  Receber meu plano por e-mail
</a>
<div id="statusEnvio" class="mt-4 text-center text-slate-700 font-medium"></div>

<script>
document.getElementById("btnEmail").addEventListener("click", async (e) => {
  e.preventDefault();
  const nome = localStorage.getItem('lead_nome') || '';
  const email = localStorage.getItem('lead_email') || '';
  const dieta = localStorage.getItem('quiz_result_title') || 'Dieta Personalizada';
  const upsell = localStorage.getItem('upsell_comprado') === '1';
  const status = document.getElementById('statusEnvio');
  status.innerHTML = "üì§ Enviando seu plano por e-mail...";
  
  try {
    const res = await fetch('https://italomelo.com/server/send_email_plan.php', {
      method: 'POST',
      headers: { 'Content-Type': 'application/json' },
      body: JSON.stringify({ name: nome, email, dieta, upsell })
    });
    const data = await res.json();
    if (data.ok) {
      status.innerHTML = "‚úÖ Plano enviado com sucesso para: <strong>" + email + "</strong>";
    } else {
      status.innerHTML = "‚ö†Ô∏è Falha no envio: " + (data.error || 'erro desconhecido');
    }
  } catch (err) {
    console.error(err);
    status.innerHTML = "‚ùå Erro de conex√£o ao enviar o e-mail.";
  }
});
</script>


  <script>
  // Envio autom√°tico WhatsApp
  document.addEventListener("DOMContentLoaded", async () => {
    const phone = localStorage.getItem('lead_whats') || '';
    const dieta = localStorage.getItem('quiz_result_title') || 'Dieta Personalizada';

    try {
      const res = await fetch('https://italomelo.com/server/whatsapp-bot.php', {
        method: 'POST',
        headers: { 'Content-Type': 'application/json' },
        body: JSON.stringify({ phone: phone, message: dieta })
      });
      console.log("‚úÖ Resposta do servidor:", await res.json());
    } catch (e) {
      console.error("‚ùå Erro ao enviar para WhatsApp:", e);
    }
  });
  </script>
